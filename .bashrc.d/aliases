alias lt="ls -rt1"
alias mv="mv -i"
alias rm="rm -i"
alias clock='tty-clock -csC0'
alias pass='pass -c'
alias :q='exit'
alias calendar='calendar -f ~/calendar/calendar'
alias mp='mpv --playlist="$(find $HOME/music/playlists | fzf)"'
alias mps='mpv --shuffle --playlist="$(find $HOME/music/playlists | fzf)"'
alias mp3='mpv "$(find $HOME/music/playlists | fzf)"'

if [ "$HIDPI" = "1" ]; then
  alias drawio="drawio --force-device-scale-factor=2"
fi
